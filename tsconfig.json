{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "test/*": [
        "test/*"
      ]
    },
    "typeRoots": [
      "src/@types",
      "./node_modules/src/@types",
    ],
  },
  "include": ["src/**/*"],
  "exclude" : ["src/**/*.test.ts"],
}
